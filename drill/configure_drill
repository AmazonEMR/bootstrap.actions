#!/usr/bin/ruby

require 'rubygems'
require 'json'
require 'emr/common'

job_flow = Emr::JsonInfoFile.new('job-flow')
instance_info = Emr::JsonInfoFile.new('instance')
is_master = instance_info['isMaster'].to_s == 'true'
zookeeper = job_flow['masterPrivateDnsName']

run "mkdir -p /home/hadoop/drill"

File.open('/home/hadoop/drill/drill-override.conf', 'w') do |f|
  f.write(<<EOF
drill.exec: {
  cluster-id: "EMR-Drill"
  rpc: {
  	user.port : 31010,
  	bit.port : 32011
  },
  operator: {
    packages += "org.apache.drill.exec.physical.config"
  },
  optimizer: {
    implementation: "org.apache.drill.exec.opt.IdentityOptimizer"
  },
  storage: {
	packages += "org.apache.drill.exec.store"
  }
  metrics : {
  	context: "drillbit"
  },
  zk: {
	connect: "#{zookeeper}",
	root: "/drill",
	refresh: 500,
	timeout: 5000,
	retry: {
	  count: 7200,
	  delay: 500
	}
  }

  network: {
    start: 35000
  }
}

EOF
end

